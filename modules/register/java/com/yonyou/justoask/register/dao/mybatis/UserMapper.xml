<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yonyou.justoask.register.dao.mybatis.UserDao">
  <!--查询一条记录-->
  <select id="findById" resultMap="UserMap">SELECT <include refid="columns"/> FROM JS_USER WHERE USER_ID=#{userId}</select>
  <!--查询所有记录-->
  <select id="findAll" resultMap="UserMap">SELECT <include refid="columns"/> FROM JS_USER</select>
  <!--按条件查询-->
  <select id="search" parameterType="map" resultMap="UserMap">SELECT <include refid="columns"/> FROM JS_USER
    <where/>
  </select>
  <!--分页查询-->
  <select id="searchByPage" parameterType="map" resultMap="UserMap">SELECT <include refid="columns"/> FROM JS_USER
    <where/>
  </select>
  <!--插入记录-->
  <insert id="save" parameterType="User">INSERT INTO JS_USER (<include refid="columns"/>) VALUES (#{userId},#{userName},#{password})</insert>
  <!--删除记录-->
  <delete id="delete">DELETE FROM JS_USER WHERE USER_ID=#{userId}</delete>
  <!--修改记录-->
  <update id="update" parameterType="User">UPDATE JS_USER
    <set>
      <if test="userName != null">USER_NAME = #{userName}, </if>
      <if test="password != null">PASSWORD = #{password}, </if>
    </set>WHERE USER_ID=#{userId}
  </update>
  <!--结果映射-->
  <resultMap type="User" id="UserMap">
    <result column="USER_ID" property="userId"/>
    <result column="USER_NAME" property="userName"/>
    <result column="PASSWORD" property="password"/>
  </resultMap>
  <!--查询字段-->
  <sql id="columns">USER_ID,USER_NAME,PASSWORD</sql>
</mapper>
